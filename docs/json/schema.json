{
    "title": "PyBoat config",
    "type": "object",
    "properties": {
        "guildId": {
            "title": "Server ID",
            "type": "string",
            "minLength": "16",
            "maxLength": "20",
            "pattern": "^[0-9]+$",
            "required": true

        },
        "levels": {
            "title": "Levels",
            "type": "object",
            "properties": {
                "roles": {
                    "type": "array",
                    "format": "table",
                    "uniqueItems": "true",
                    "items": {
                        "type": "object",
                        "title": "Roles",
                        "properties": {
                            "__key": {
                                "title": "Role ID",
                                "type": "string",
                                "minLength": "16",
                                "maxLength": "20",
                                "pattern": "^[0-9]+$"
                            },
                            "level": {
                                "title": "Bot Level",
                                "type": "integer",
                                "minimum": 0,
                                "maximum": 999
                            }
                        }
                    }
                },
                "users": {
                    "type": "array",
                    "format": "table",
                    "uniqueItems": "true",
                    "items": {
                        "type": "object",
                        "title": "Users",
                        "properties": {
                            "__key": {
                                "title": "User ID",
                                "type": "string",
                                "minLength": "16",
                                "maxLength": "20",
                                "pattern": "^[0-9]+$"
                            },
                            "level": {
                                "title": "Bot Level",
                                "type": "integer",
                                "minimum": -1,
                                "maximum": 999
                            }
                        }
                    }
                }
            }
        },
        "modules": {
            "title": "Modules",
            "type": "object",
            "properties": {
                "admin": {
                    "title": "Admin",
                    "type": "object",
                    "properties": {
                        "enabled": {
                            "title": "Enabled",
                            "type": "boolean",
                            "default": false,
                            "format": "checkbox"
                        }
                    }
                },
                "antiPing": {
                    "title": "AntiPing",
                    "type": "object",
                    "properties": {
                        "enabled": {
                            "title": "Enabled",
                            "type": "boolean",
                            "default": false,
                            "format": "checkbox"
                        }
                    }
                },
                "antiSpam": {
                    "title": "AntiSpam",
                    "type": "object",
                    "properties": {
                        "enabled": {
                            "title": "Enabled",
                            "type": "boolean",
                            "default": false,
                            "format": "checkbox"
                        }
                    }
                },
                "censor": {
                    "title": "Censor",
                    "type": "object",
                    "properties": {
                        "enabled": {
                            "title": "Enabled",
                            "type": "boolean",
                            "default": false,
                            "format": "checkbox"
                        }
                    }
                },
                "commands": {
                    "title": "Commands",
                    "type": "object",
                    "properties": {
                        "enabled": {
                            "title": "Enabled",
                            "type": "boolean",
                            "default": false,
                            "format": "checkbox"
                        }
                    }
                },
                "counting": {
                    "title": "Counting",
                    "type": "object",
                    "properties": {
                        "enabled": {
                            "title": "Enabled",
                            "type": "boolean",
                            "default": false,
                            "format": "checkbox"
                        }
                    }
                },
                "infractions": {
                    "title": "Infractions",
                    "type": "object",
                    "properties": {
                        "enabled": {
                            "title": "Enabled",
                            "type": "boolean",
                            "default": false,
                            "format": "checkbox"
                        }
                    }
                },
                "logging": {
                    "title": "Logging",
                    "type": "object",
                    "properties": {
                        "enabled": {
                            "title": "Enabled",
                            "type": "boolean",
                            "default": false,
                            "format": "checkbox"
                        }
                    }
                },
                "starboard": {
                    "title": "Starboard",
                    "type": "object",
                    "properties": {
                        "enabled": {
                            "title": "Enabled",
                            "type": "boolean",
                            "default": false,
                            "format": "checkbox"
                        }
                    }
                },
                "tags": {
                    "title": "Tags",
                    "type": "object",
                    "properties": {
                        "enabled": {
                            "title": "Enabled",
                            "type": "boolean",
                            "default": false,
                            "format": "checkbox"
                        },
                        "maxLength": {
                            "type": "integer",
                            "title": "Maximum Tag Length",
                            "minimum": 10,
                            "maximum": 1990,
                            "default": 200,
                            "options": {
                                "dependencies": {
                                    "enabled": true
                                }
                            }
                        },
                        "levelEditOthers": {
                            "type": "integer",
                            "title": "Bot Level needed to edit other people's tags",
                            "minimum": 0,
                            "default": 50,
                            "maximum": 999,
                            "options": {
                                "dependencies": {
                                    "enabled": true
                                }
                            }
                        }
                    }
                },
                "translation": {
                    "title": "Translation",
                    "type": "object",
                    "properties": {
                        "enabled": {
                            "title": "Enabled",
                            "type": "boolean",
                            "default": false,
                            "format": "checkbox"
                        },
                        "googleApi": {
                            "title": "Google API",
                            "type": "object",
                            "properties": {
                                "key": {
                                    "type": "string",
                                    "title": "API Key",
                                    "description": "Your Google API Key"
                                }
                            },
                            "options": {
                                "dependencies": {
                                    "enabled": true
                                }
                            }
                        },
                        "level": {
                            "title": "Bot Level",
                            "description": "Bot level needed to use translation reactions",
                            "type": "integer",
                            "minimum": 0,
                            "maximum": 999,
                            "options": {
                                "dependencies": {
                                    "enabled": true
                                }
                            }
                        }
                    }
                },
                "utilities": {
                    "title": "Utilities",
                    "type": "object",
                    "properties": {
                        "enabled": {
                            "title": "Enabled",
                            "type": "boolean",
                            "default": false,
                            "format": "checkbox"
                        },
                        "snipe": {
                            "title": "Snipe",
                            "type": "object",
                            "properties": {
                                "enabled": {
                                    "title": "Enabled",
                                    "type": "boolean",
                                    "default": false,
                                    "format": "checkbox"
                                },
                                "delay": {
                                    "title": "Delay",
                                    "type": "integer",
                                    "description": "The delay for which deleted messages can be sniped for (in seconds)",
                                    "default": 120,
                                    "minimum": 0,
                                    "maximum": 10000,
                                    "options": {
                                        "dependencies": {
                                            "enabled": true
                                        }
                                    }
                                }
                            },
                            "options": {
                                "dependencies": {
                                    "enabled": true
                                }
                            }
                        }
                    }
                }
            }
        }
    }
